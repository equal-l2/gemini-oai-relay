{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
